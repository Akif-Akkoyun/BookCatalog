@model Book

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-center">Book Detail</h2>
            <br />
            <br />
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>
                            ID
                        </th>
                        <th>
                            Title
                        </th>
                        <th>
                            Author
                        </th>
                        <th>
                            Genre
                        </th>
                        <th>
                            PageCount
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            @Model.Id
                        </td>
                        <td>
                            @Model.Title
                        </td>
                        <td>
                            @Model.Author
                        </td>
                        <td>
                            @Model.Genre
                        </td>
                        <td>
                            @Model.PageCount
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
